<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="codebrains.crazysellout" >

    <!-- Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Wifi Permissions -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <!-- GPS Permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Feature for openGL to render map for application -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <uses-library android:name="android.test.runner" />

        <activity android:name=".Activities.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Fragments.LoginFragment" >
        </activity>
        <activity android:name=".Fragments.CreatAccountFragment" >
        </activity>
        <activity android:name=".Activities.MainUserActivity" >
        </activity>
        <activity android:name=".Fragments.ProductsListFragment" >
        </activity>
        <activity android:name=".Fragments.UserFavoritesFragment" >
        </activity>
        <activity android:name=".Fragments.GoogleMapsFragment" >
        </activity>
        <activity android:name=".Fragments.ProductsListAvtivity" >
        </activity>
        <activity android:name=".Activities.MainProducerActivity" >
        </activity>
        <activity android:name=".Fragments.AddItemsFragment" >
        </activity>
        <activity android:name=".Fragments.ProducerItemsFragment" >
        </activity>
        <activity android:name=".Activities.ProductCostumization" >
        </activity>
        <activity android:name=".Activities.ProductCustomizationActivity" >
        </activity>
        <activity android:name=".Fragments.UserProductsListActivity" >
        </activity>
        <activity android:name=".Fragments.UserProductListFragment" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="APIKEY" />

        <activity
            android:name=".Fragments.MapsFragment"
            android:label="@string/title_activity_maps_fragment" >
        </activity>
    </application>

</manifest>
